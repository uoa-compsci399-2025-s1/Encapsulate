{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".env"],
  "globalEnv": [],
  "remoteCache": {
    "enabled": true,
    "uploadTimeout": 180,
    "preflight": true
  },
  "tasks": {
    "check-types": {
      "inputs": ["$TURBO_DEFAULT$", "**.ts", "**.tsx"]
    },
    "build": {
      "dependsOn": ["^build"],
      "env": [
        "DATABASE_URI",
        "PAYLOAD_SECRET",
        "JWT_SECRET",
        "ADMIN_ID",
        "GOOGLE_CLIENT_ID",
        "GOOGLE_CLIENT_SECRET",
        "NEXT_PUBLIC_URL",
        "S3_ACCESS_KEY_ID",
        "S3_SECRET_ACCESS_KEY",
        "S3_REGION",
        "S3_BUCKET_NAME"
      ],
      "inputs": ["$TURBO_DEFAULT$", ".env", "./src"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "dev": {
      "cache": false,
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "persistent": true
    },
    "test": {
      "dependsOn": ["^test"],
      "inputs": ["$TURBO_DEFAULT$", ".env*", "**.ts", "**.tsx"]
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "inputs": ["$TURBO_DEFAULT$", "**/*.js", "**/*.ts", "**/*.tsx"]
    },
    "prettier:check": {
      "inputs": ["$TURBO_DEFAULT$", "**/*.js", "**/*.ts", "**/*.tsx"]
    },
    "generate:importmap": {
      "outputs": ["./src/app/payload/admin/importMap.js"]
    },
    "generate:types": {
      "outputs": ["./src/payload-types.ts"]
    }
  }
}
